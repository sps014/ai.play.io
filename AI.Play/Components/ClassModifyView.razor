<!-- Modal -->
<div class="modal fade"
     id="exampleModal_@ClassContainer.ClassName"
     tabindex="-1"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modify  @ClassContainer.ClassName</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-outline">
                    <input type="text" id="typeText" class="form-control active" @bind-value="ClassContainer.ClassName"/>
                    <label class="form-label" for="typeText">Image Label</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
@code
{
    [Parameter]
    public ImageClassContainer ClassContainer { get; set; }
}
